# problem link - https://codeforces.com/problemset/problem/1744/C
# code - 
#include<bits/stdc++.h>
using namespace std;
int solve(string s, char ch, int n){
    if(ch == 'g')return 0;
        vector<int> green, color;
        for(int i=0; i<n; i++){
            if(s[i]=='g')green.push_back(i);
            else if(s[i]==ch)color.push_back(i);
            
        }
        int ans = 0;
        for(auto &i : color){
            auto it = lower_bound(green.begin(), green.end(), i);
            if(it != green.end()){
                ans = max(ans, *it-i);
            }
            else{
                ans = max(ans, n-i+green[0]);
            }
        }
        return ans;
}
int main(){
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t;
    cin>>t;
    while(t--){
        int n;
        char ch;
        cin>>n>>ch;
        string s;
        cin>>s;
        int ans = solve(s, ch, n);
        cout<<ans<<endl;
    }
    return 0;
}
